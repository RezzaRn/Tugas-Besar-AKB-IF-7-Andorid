<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailWisata">

    <TextView
        android:id="@+id/tvNamaWisata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Nama Tempat Wisata"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvLokasiWisata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:text="lokasi"
        android:textAlignment="center"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/IvWisata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tvDeskWisata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris diam lectus, commodo quis scelerisque et, ultrices sodales purus. Curabitur dignissim condimentum quam, ultrices hendrerit velit fermentum non. Suspendisse volutpat lorem quam, ut porta turpis porttitor a. Nam nibh leo, fringilla et feugiat a, efficitur in nibh. Class aptent taciti sociosqu ad litora torquent per conubia nostra, per inceptos himenaeos. Vivamus ornare sodales tempor. Integer vestibulum viverra cursus. Integer elit nisl, vehicula in tincidunt quis, hendrerit ac dui." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <Button
            android:id="@+id/btnBukaMaps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="20dp"
            android:text="Buka Maps"
            />
    </LinearLayout>

</LinearLayout>